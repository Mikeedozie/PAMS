# Database Configuration
DATABASE_URL=postgresql+psycopg2://pams_user:pams_pass@localhost:5432/pams
DATABASE_ECHO=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_TITLE=PAMS - Product Alert Management System
API_VERSION=1.0.0
API_DESCRIPTION=AI-driven Product Alert Management with Predictive Analytics

# Security
SECRET_KEY=change-this-to-random-secure-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ML Model Settings
ML_MODEL_PATH=./ml_models
ML_ENABLE_GPU=False
ML_BATCH_SIZE=32

# Alert Settings
ALERT_DEDUPLICATION_THRESHOLD=0.8
ALERT_SLA_P1_HOURS=4
ALERT_SLA_P2_HOURS=24
ALERT_SLA_P3_HOURS=72
ALERT_SLA_P4_HOURS=168

# Email Notifications (SMTP)
ENABLE_EMAIL_NOTIFICATIONS=True
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM_EMAIL=noreply@pams.com

# SMS Notifications (Twilio)
ENABLE_SMS_NOTIFICATIONS=False
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=True

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring & Analytics
SENTRY_DSN=
ENABLE_PROMETHEUS=True

# Feature Flags
ENABLE_ADVANCED_ML=True
ENABLE_REAL_TIME_PROCESSING=True
ENABLE_AUTO_ESCALATION=True
